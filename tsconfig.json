{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "outDir": "dist",
      "lib": [
        "DOM",
        "ESNext",
        "ESNext.Array",
        "ESNext.AsyncIterable",
        "ESNext.Intl",
        "ESNext.Symbol"
      ],
      "sourceMap": false,
      "inlineSourceMap": true,
      "inlineSources": true,
      "incremental": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "removeComments": true,
  }